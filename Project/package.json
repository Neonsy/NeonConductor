{
    "name": "electron-vite-react-template",
    "private": true,
    "version": "0.0.0-alpha.1+custom-extra-name",
    "description": "Base Electron + Vite + React template with tRPC IPC, TanStack Router/Query/Form/Virtual, and TailwindCSS",
    "author": "",
    "type": "module",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:win": "vite build && electron-builder --win -c electron-builder.json5",
        "build:mac": "vite build && electron-builder --mac -c electron-builder.json5",
        "build:linux": "vite build && electron-builder --linux -c electron-builder.json5",
        "publish:generic": "tsx scripts/publish.ts",
        "changeset": "changeset",
        "changeset:version": "changeset version",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@tanstack/react-form": "^1.28.0",
        "@tanstack/react-query": "^5.90.20",
        "@tanstack/react-router": "^1.158.1",
        "@tanstack/react-virtual": "^3.13.18",
        "@trpc/client": "^11.9.0",
        "@trpc/react-query": "^11.9.0",
        "@trpc/server": "^11.9.0",
        "arktype": "^2.1.29",
        "electron-trpc-experimental": "1.0.0-alpha.1",
        "mutative": "^1.3.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-icons": "^5.5.0",
        "zustand": "^5.0.11"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@eslint/js": "^9.39.2",
        "@tailwindcss/forms": "^0.5.11",
        "@tailwindcss/vite": "^4.1.18",
        "@tanstack/react-devtools": "^0.9.4",
        "@tanstack/react-form-devtools": "^0.2.13",
        "@tanstack/react-query-devtools": "^5.91.3",
        "@tanstack/react-router-devtools": "^1.158.1",
        "@tanstack/router-plugin": "^1.158.1",
        "@types/node": "^25.2.0",
        "@types/react": "^19.2.11",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.3",
        "babel-plugin-react-compiler": "^1.0.0",
        "dotenv": "^17.2.3",
        "electron": "^40.1.0",
        "electron-builder": "^26.7.0",
        "electron-updater": "^6.7.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-no-secrets": "^2.2.1",
        "eslint-plugin-prettier": "^5.5.5",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.5.0",
        "globals": "^17.3.0",
        "prettier": "^3.8.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "tailwind-clamp": "^4.1.2",
        "tailwindcss": "^4.1.18",
        "tsx": "^4.21.0",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.54.0",
        "vite": "^7.3.1",
        "vite-plugin-electron": "^0.29.0",
        "vite-tsconfig-paths": "^6.0.5",
        "vitest": "^4.0.18"
    }
}
